# Dynamically linked : Debian
FROM lukemathwalker/cargo-chef:latest-rust-1.75.0-alpine3.18 AS chef
WORKDIR /app

FROM chef AS planner
COPY . .
RUN cargo chef prepare --recipe-path recipe.json

FROM chef AS builder 
COPY --from=planner /app/recipe.json recipe.json
RUN cargo chef cook --recipe-path recipe.json
COPY . .
RUN cargo build --bin axum-demo

FROM debian:bookworm-slim AS runtime
WORKDIR /usr/local/bin
COPY --from=builder /app/target/debug/axum-demo /usr/local/bin
COPY .env .
RUN apt update
RUN apt install -y strace procps htop binutils
# lscpu, readelf, ps
